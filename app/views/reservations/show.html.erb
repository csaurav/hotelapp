<div class="columns">
  <div class="column">
    <h2 class="subtitle">Booking Details</h3>
  </div>
  <div class="column">
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to("Check Out", { controller: "reservations", action: "check_out", 
            id: @customer.reservation_id }, method: :delete, :class => "button is-primary is-outlined") %>      
    </div>

  </div>
</div>

<%# <h3>Booking details </h3> %>

    
<div class="table-container">
  <table class="table">
    <tbody>
        <tr>
            <td><strong>Room No</strong></td>
            <td></td>
            <td><%= @room.room_no %></td>
        </tr>
        <tr>
            <td><strong>Room Type</strong></td>
            <td></td>
            <td><%= @room.room_type %></td>

        </tr>
        <tr>
            <td><strong>Room Description</strong></td>
            <td></td>
            <td><%= @room.description %></td>

        </tr>
        <tr>
            <td><strong>Room Price</strong></td>
            <td></td>
            <td><%= @room.price %></td>

        </tr>
        <tr>
            <td><strong>Booking Period</strong></td>
            <td></td>
            <td><%= @reservation.start_date %> to <%= @reservation.end_date%></td>

        </tr>
    </tbody>
  </table>
</div>

<h4>Customer Details </h3>

<div class="table-container">
  <table class="table">
    <tbody>
        <tr>
            <td><strong>Customer Name</strong></td>
            <td></td>
            <td><%= customer_full_name(@customer) %></td>
        </tr>
        <tr>
            <td><strong>Phone Number</strong></td>
            <td></td>
            <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
            <td><strong>Gender</strong></td>
            <td></td>
            <td><%= @customer.gender %></td>
        </tr>

        <tr>
            <td><strong>Address</strong></td>
            <td></td>
            <td><%= @customer.address %></td>
            <td><%= link_to("Update Customer", edit_customer_path(@customer), :class => "button is-dark is-outlined") %></td>
        </tr>
        
    </tbody>
  </table>
  
</div>