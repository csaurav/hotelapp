
<%= form_with(model: @reservation, url: room_reservations_path(@reservation.room_id), method: "post", local: true) do |f|%>
    <% if @reservation.errors.any? %>
    <div class="container">
        <div class="notification">
            <h2 class="has-text-danger"><strong><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</strong></h2>
            <ul>                
                <% @reservation.errors.full_messages.each do |msg| %>
                    <li class="has-text-danger"><%= msg %></li>
                <% end %>
            </ul>
        </div>
        
    </div>
  <% end %>    
    <div class="field is-grouped">
        <div class="field">
            <label class="label">Start Date</label>
            <div class="control">
                <%= f.text_field :start_date, class: :input, type: :date %>
                
            </div>
        </div>
        <div>&nbsp</div>
        <div>&nbsp</div>
        <div>&nbsp</div>
        <div>&nbsp</div>
        <div>&nbsp</div>
        <div class="field">
            <label class="label">End Date</label>
            <div class="control">
                <%= f.text_field :end_date, class: :input, type: :date %>
            </div>
        </div>
    </div>    

    <%= f.fields_for :customer, @reservation.customer do |f_customer| %>
    <div class="field">
        <label class="label">First Name</label>
        <div class="control">
            <%= f_customer.text_field :first_name, class: :input, type: :text, placeholder: 'Text Input' %>
        </div>
    </div>

    <div class="field">
        <label class="label">Last Name</label>
        <div class="control">
            <%= f_customer.text_field :last_name, class: :input, type: :text, placeholder: 'Text Input' %>
        </div>
    </div>

    <div class="field">
        <label class="label">Phone Number</label>
        <div class="control">
            <%= f_customer.text_field :phone_number, class: :input, type: :text, placeholder: 'Enter number' %>
        </div>
    </div>


    <div class="field">
        <label class="label">Gender</label>
        <div class="control">            
            <%= f_customer.select :gender, ['Male', 'Female'], class: :input, type: :text, placeholder: 'Text Input'%>
        </div>
    </div>

    <div class="field">
        <label class="label">Address</label>
        <div class="control">
            <%= f_customer.text_area :address, class: :input, type: :text, placeholder: 'Text Input' %>
        </div>
    </div>
    <% end %>
    <div class="field is-grouped">
        <div class="control">
            <%# <button class="button is-link">Submit</button> %>
            <%# <%= f.submit "Submit", :class => 'btn btn-primary' %>
            <%= f.submit "Create", class: "button is-link" %>
        </div>
        <%# <div class="control">
            <button class="button is-link is-light">Cancel</button>
            <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
        </div> 
    </div>
<% end %>






